{
    "app-id": "io.mgba.mGBA",
    "runtime": "org.kde.Platform",
    "sdk": "org.kde.Sdk",
    "runtime-version": "5.15-22.08",
    "command": "mgba-qt",
    "rename-appdata-file": "mgba.appdata.xml",
    "finish-args": [
        "--device=all",
        "--filesystem=host:rw",
        "--socket=pulseaudio",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--system-talk-name=org.freedesktop.UPower",
        "--talk-name=org.freedesktop.ScreenSaver"
    ],
    "modules": [
        "shared-modules/lua5.4/lua-5.4.json",
        {
            "name": "mgba",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_INSTALL_LIBDIR=lib",
                "-DUSE_EPOXY=OFF"
            ],
            "build-commands": [
                "install -Dm644 appdata.xml /app/share/appdata/mgba.appdata.xml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/mgba-emu/mgba/archive/0.10.1.tar.gz",
                    "sha256": "5fc1d7ac139fe51ef71782d5de12d11246563cdebd685354b6188fdc82a84bdf",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 141675,
                        "url-template": "https://github.com/mgba-emu/mgba/archive/$version.tar.gz"
                    }
                },
                {
                    "type": "file",
                    "path": "appdata.xml"
                }
            ]
        }
    ]
}
